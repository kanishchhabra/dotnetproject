@model IEnumerable<Students.Models.Lesson>

@{
    ViewData["Title"] = "Lessons";
}

<h1>Index</h1>
<b>****Please prepare letter first before making a letter****</b>
<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Lessons" asp-action="Index" method="get">
    <p>
        Student Name: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Tutor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instrument)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Term)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration.DurationTime)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.TimeYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paid)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>


            <td>
                @Html.DisplayFor(modelItem => item.Student.FullName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Tutor.TFullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Instrument.InstrumentType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Term)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration.DurationTime) minutes
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.TimeYear)
            </td>
            <td>
                @Html.CheckBoxFor(modelItem => item.Paid, new { @disabled = "disabled" })
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.LessonId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LessonId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LessonId">Delete</a> |
                <a asp-action="Prepare" asp-route-id="@item.LessonId">Prepare Letter</a> |
                <a asp-action="Letter" asp-route-id="@item.LessonId">Make Letter</a> |
                <a asp-action="TogglePaid" asp-route-id="@item.LessonId">Toggle Paid</a>
            </td>
        </tr>
        }
    </tbody>
</table>
